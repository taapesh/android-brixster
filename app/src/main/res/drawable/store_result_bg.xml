<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <padding android:top="5dp" android:right="10dp" android:bottom="5dp" android:left="10dp" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="1dp" android:right="2dp" android:bottom="2dp" android:left="1dp" />
            <solid android:color="@color/card_shadow_1" />
            <corners android:radius="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="1dp" android:right="2dp" android:bottom="2dp" android:left="1dp" />
            <solid android:color="@color/store_card_shadow" />
            <corners android:radius="7dp" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape >
            <solid android:color="@color/card_background" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>