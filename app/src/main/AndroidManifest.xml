<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taapesh.prototype" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera2" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".CustomerHomeActivity"
            android:label="Storefront" >
        </activity>
        <activity
            android:name=".CustomerRegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".CustomerLoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".StartActivity"
            android:label="@string/title_activity_start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BusinessLoginActivity"
            android:label="@string/title_activity_business_login" >
        </activity>
        <activity
            android:name=".EmployeeLoginActivity"
            android:label="@string/title_activity_employee_login" >
        </activity>
        <activity
            android:name=".StorePasswordActivity"
            android:label="@string/title_activity_enter_store_password" >
        </activity>
        <activity
            android:name=".EmployeeHomeActivity"
            android:label="@string/title_activity_employee_homepage" >
        </activity>
        <activity
            android:name=".BusinessHomeActivity"
            android:label="@string/title_activity_business_homepage" >
        </activity>
        <activity
            android:name=".StoreBrowseActivity"
            android:label="@string/title_activity_store_browse" >
        </activity>
        <activity
            android:name=".StoreCartActivity"
            android:label="@string/title_activity_store_cart" >
        </activity>
    </application>

</manifest>
